<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_drag_desciption_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#bb000000"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="解放军核潜艇技师操舵27年"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tv_current_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_total_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/19"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="9dp"
        android:text="指挥员抓住稍纵即逝机会，实施了模拟攻击。这一切，对方毫无察觉。随即戴长宏打出一个相对舵，将潜艇“速潜”至大深度，令对手无功而返。“戴技师掌舵，让我隐蔽模拟攻击底气十足。”李艇长说，多年来戴技师致力研究不同航速下操纵方式，降低操舵频率，大幅降低艇体噪音，今日再次在“水下战场”大显身手。(来源: 新华网)"
        android:textColor="@color/white"/>
</LinearLayout>