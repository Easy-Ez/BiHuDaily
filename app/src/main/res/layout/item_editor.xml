<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/theme_editor_sdv"
        app:roundAsCircle="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        app:placeholderImage="@drawable/editor_profile_avatar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/theme_editor_sdv"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/theme_editor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_editor_name"
                android:textSize="@dimen/text_size_16"
                tools:text="什么什么" />

            <TextView
                android:id="@+id/theme_editor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_editor_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                tools:text="什么什么" />
        </LinearLayout>

        <TextView
            android:id="@+id/theme_editor_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:maxLines="1"
            android:textColor="@color/theme_editor_bio"
            android:textSize="@dimen/text_size_13"
            tools:text="什么什么" />
    </LinearLayout>
</RelativeLayout>