<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ToolbarStyle">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
        <item name="contentInsetStartWithNavigation">12dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/toolBarColor</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
</resources>