<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ml.saddhu.bihudaily">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- huawei push -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.huawei.hms.client.appid"
            android:value="10878555"></meta-data>
        <provider
            android:name="com.huawei.hms.update.provider.UpdateProvider"
            android:authorities="cn.ml.saddhu.bihudaily.hms.update.provider"
            android:exported="false"
            android:grantUriPermissions="true"></provider>

        <activity
            android:name=".mvp.view.impl.activity.SplashActivity_"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.view.impl.activity.MainActivity_"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.view.impl.activity.StoryDetailActivity_"
            android:launchMode="singleTop"
            android:parentActivityName=".mvp.view.impl.activity.MainActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.view.impl.activity.CommentsAcitivty_"
            android:parentActivityName=".mvp.view.impl.activity.StoryDetailActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.view.impl.activity.EditorListActivity_"
            android:parentActivityName=".mvp.view.impl.activity.MainActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.view.impl.activity.EditorActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.view.impl.activity.TestActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.view.impl.activity.GuideTestActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.view.impl.activity.ImageViewerActiviy_"
            android:parentActivityName=".mvp.view.impl.activity.MainActivity_"
            android:theme="@style/AppTheme.NoActionBar.ImageViewer" />
        <activity
            android:name=".mvp.view.impl.activity.SettingsActivity_"
            android:parentActivityName=".mvp.view.impl.activity.MainActivity_"
            android:theme="@style/AppTheme.NoActionBar.Settings" />


        <receiver android:name=".engine.push.huawei.MyHuaWeiPushReceiver">
            <intent-filter>
                <!-- 必须,用于接收token -->
                <action android:name="com.huawei.android.push.intent.REGISTRATION" />
                <!-- 必须，用于接收消息 -->
                <action android:name="com.huawei.android.push.intent.RECEIVE" />
                <!-- 可选，用于点击通知栏或通知栏上的按钮后触发onEvent回调 -->
                <action android:name="com.huawei.android.push.intent.CLICK" />
                <!-- 可选，查看push通道是否连接，不查看则不需要 -->
                <action android:name="com.huawei.intent.action.PUSH_STATE" />
            </intent-filter>
            <meta-data
                android:name="CS_cloud_ablitity"
                android:value="@string/hwpush_ability_value" />
        </receiver>
        <receiver android:name="com.huawei.hms.support.api.push.PushEventReceiver">
            <intent-filter>
                <!-- 接收通道发来的通知栏消息，兼容老版本Push -->
                <action android:name="com.huawei.intent.action.PUSH" />
            </intent-filter>
        </receiver>
    </application>

</manifest>